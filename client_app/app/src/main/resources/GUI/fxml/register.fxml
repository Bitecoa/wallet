<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="wallet.GUI.controllers.RegisterController">
    <center>
        <StackPane>
            <children>
                <VBox alignment="TOP_CENTER" StackPane.alignment="CENTER">
                    <children>
                        <GridPane alignment="CENTER" prefHeight="299.0" prefWidth="600.0" vgap="30.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="304.0" minWidth="10.0" prefWidth="299.0" />
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="307.0" minWidth="10.0" prefWidth="301.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints maxHeight="-Infinity" valignment="CENTER" vgrow="SOMETIMES" />
                                <RowConstraints maxHeight="-Infinity" vgrow="SOMETIMES" />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                            </rowConstraints>
                            <children>
                                <Label text="First name :" />
                                <Label text="Last name :" GridPane.rowIndex="1" />
                                <Label text="National register number :" GridPane.rowIndex="2" />
                                <Label alignment="CENTER" contentDisplay="CENTER" text="Password :" GridPane.rowIndex="3" />
                                <Label text="Confirm password :" GridPane.rowIndex="4" />
                                <TextField fx:id="firstName" GridPane.columnIndex="1" />
                                <TextField fx:id="lastName" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <TextField fx:id="nationalId" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <PasswordField fx:id="password" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                <PasswordField fx:id="confirmPassword" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                            </children>
                            <VBox.margin>
                                <Insets top="200.0" />
                            </VBox.margin>
                        </GridPane>
                    </children>
                </VBox>
                <Label fx:id="wrong" text="Passwords must be matching " textFill="RED" visible="false" StackPane.alignment="TOP_CENTER" />
            </children>
        </StackPane>
    </center>
    <bottom>
        <Button fx:id="register" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="#onRegisterClicked" text="Register" BorderPane.alignment="CENTER">
            <font>
                <Font name="Montserrat SemiBold" size="17.0" />
            </font>
            <BorderPane.margin>
                <Insets bottom="50.0" />
            </BorderPane.margin>
        </Button>
    </bottom>
    <top>
        <Button fx:id="back" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#onBackButtonClicked" text="Back" BorderPane.alignment="TOP_LEFT">
            <font>
                <Font name="Montserrat SemiBold" size="17.0" />
            </font>
            <Insets left="10.0" top="10.0" />
         <BorderPane.margin>
            <Insets left="10.0" top="10.0" />
         </BorderPane.margin>
        </Button>
    </top>
</BorderPane>
