<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@../css/general-style.css" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="wallet.GUI.controllers.HelloController"
            fx:id="borderPane"
>
    <center>
        <VBox alignment="CENTER" fillWidth="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
              minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" spacing="30.0">
            <children>
                <Label fx:id="wrong" contentDisplay="CENTER" text="Wrong password or ID" textFill="RED"
                       visible="false"/>
                <HBox alignment="CENTER" prefHeight="49.0" prefWidth="600.0">
                    <children>
                        <Label fx:id="idLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="16.0"
                               prefWidth="106.0" text="ID :"/>
                        <TextField fx:id="id"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="53.0" prefWidth="600.0">
                    <children>
                        <Label fx:id="passwordLabel" prefHeight="16.0" prefWidth="106.0" text="Password :"/>
                        <PasswordField fx:id="password" prefHeight="24.0" prefWidth="169.0"/>
                    </children>
                </HBox>
                <Button fx:id="login" mnemonicParsing="false" onAction="#onLoginButtonClick" prefHeight="29.0"
                        prefWidth="123.0" text="Login">

                </Button>
                <Button fx:id="register" mnemonicParsing="false" onMouseClicked="#onRegisterButtonClick"
                        prefHeight="29.0" prefWidth="121.0" text="Register">

                </Button>
            </children>
        </VBox>
    </center>
    <top>
    </top>
    <top>
        <Button fx:id="settings" onAction="#onSettingsButtonClick" alignment="CENTER" contentDisplay="CENTER"
                mnemonicParsing="false" text="Settings"
                BorderPane.alignment="CENTER_RIGHT">
            <BorderPane.margin>
                <Insets right="10.0" top="10.0"/>
            </BorderPane.margin>
        </Button>
    </top>
</BorderPane>
