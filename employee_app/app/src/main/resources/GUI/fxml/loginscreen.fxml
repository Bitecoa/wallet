<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="wallet.GUI.controllers.LoginScreenController"
            stylesheets="@../css/general-style.css">
    <center>
        <VBox alignment="CENTER" fillWidth="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
              minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" spacing="30.0">
            <children>
                <Label fx:id="wrong" contentDisplay="CENTER" text="Wrong password or ID" textFill="RED"
                       visible="false"/>
                <HBox alignment="CENTER" prefHeight="49.0" prefWidth="600.0">
                    <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="16.0" prefWidth="106.0"
                               text="ID :"/>
                        <TextField fx:id="id"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="53.0" prefWidth="600.0">
                    <children>
                        <Label prefHeight="16.0" prefWidth="106.0" text="Password :"/>
                        <PasswordField fx:id="password" prefHeight="24.0" prefWidth="169.0"/>
                    </children>
                </HBox>
                <Button fx:id="login" mnemonicParsing="false" onAction="#onLoginButtonClick" prefHeight="29.0"
                        prefWidth="123.0" text="Login">
                    <font>
                        <Font name="Montserrat SemiBold" size="17.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="30.0" top="30.0"/>
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </center>
</BorderPane>
